<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<targets>
		<target name="file" 
                xsi:type="File" 
                async="true" 
                overflowAction="Discard"
                enableAnsiOutput="true" 
                layout="[${environment:PROCESSOR_ARCHITECTURE}-${environment:OS}] ${longdate} | ${level:uppercase=true} > ${message:exceptionSeparator=\r\n:withException=true}" 
                internalLogToConsole="false" 
                fileName="${CurrentDir}/BTTCGuildAppLogs.log" 
                deleteOldFileOnStartup="true"/>
		<target name="console"
                xsi:type="Console"
                async="true"
                overflowAction="Discard"
                enableAnsiOutput="true"
                layout="[${environment:PROCESSOR_ARCHITECTURE}-${environment:OS}] ${longdate} | ${level:uppercase=true} > ${message:exceptionSeparator=\r\n:withException=true}"
                internalLogToConsole="false"/>
	</targets>

	<rules>
		<logger name="file" minlevel="Info" writeTo="BTTCGuildAppLogs" />
		<logger name="console" minlevel="Debug" writeTo="console" />
	</rules>
</nlog>
